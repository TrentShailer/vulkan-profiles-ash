{
    "$schema": "https://schema.khronos.org/vulkan/profiles-0.8.2-304.json#",
    "capabilities": {
        "baseline": {
            "features": {
                "VkPhysicalDeviceTimelineSemaphoreFeatures": {
                    "timelineSemaphore": true
                }
            },
            "properties": {
                "VkPhysicalDeviceProperties": {
                    "limits": {
                        "maxStorageBufferRange": 142606336
                    }
                },
                "VkPhysicalDeviceMaintenance3Properties": {
                    "maxMemoryAllocationSize": 142606336
                },
                "VkPhysicalDeviceSubgroupProperties": {
                    "subgroupSize": 4,
                    "supportedStages": [
                        "VK_SHADER_STAGE_COMPUTE_BIT"
                    ],
                    "supportedOperations": [
                        "VK_SUBGROUP_FEATURE_BALLOT_BIT",
                        "VK_SUBGROUP_FEATURE_ARITHMETIC_BIT"
                    ]
                }
            }
        },
        "debug": {
            "extensions": {
                "VK_EXT_debug_utils": 1
            }
        }
    },
    "profiles": {
        "VP_VPA_examples_compute": {
            "version": 1,
            "api-version": "1.2.198",
            "label": "Compute Example Profile",
            "description": "Profile for running the compute example.",
            "capabilities": [
                "baseline"
            ],
